<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gauleStyle">
        <item name="sv_unit">@string/unit</item>
        <item name="sv_centerCircleColor">@color/tranfer</item>
        <item name="sv_indicator">NeedleIndicator</item>
        <item name="sv_withTremble">false</item>
        <item name="sv_indicatorWidth">5dp</item>
        <item name="sv_withIndicatorLight">true</item>
        <item name="sv_indicatorLightColor">#E91E63</item>
        <item name="sv_speedTextFormat">INTEGER</item>
        <item name="sv_unitUnderSpeedText">true</item>
        <item name="sv_backgroundCircleColor">@color/back_ground</item>
        <item name="sv_textColor">@color/white</item>
        <item name="sv_speedometerColor">@color/yellow</item>
        <item name="sv_speedometerWidth">10dp</item>
        <item name="sv_speedTextColor">@color/white</item>
        <item name="sv_unitTextColor">@color/white</item>
        <item name="sv_tickNumber">5</item>
    </style>

    <style name="textViewMain">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="textViewMainBatteryInfo">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="layoutTextViewMainBatteryInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="IconTextViewMainBatteryInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>

